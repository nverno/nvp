# -*- mode: snippet -*-
# name: binary-exponentiation
# key: f_powmod
# --
long long powmod(long long x, long long y, long long mod = MOD) {
    x %= mod;
    long long res = 1;
    while (y > 0) {
        if (y&1)
            res = res * x % mod;
        x = x * x % mod;
            y >>= 1;
    }
    return res;
}