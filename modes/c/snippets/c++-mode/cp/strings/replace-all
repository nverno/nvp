# -*- mode: snippet -*-
# name: replace-all
# key: s_replace
# --
bool replaceAll(std::string& s, std::string& from, std::string& to, size_t beg = 0) {
    bool found = false;
    size_t pos = beg, cur;
    while ((cur = s.find(from, pos)) != string::npos) {
        s.replace(cur, from.size(), to);
        pos = cur + from.size();
        found = true;
    }
    return found;
}