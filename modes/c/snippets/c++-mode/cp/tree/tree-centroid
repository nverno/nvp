int ${1:sz}[${2:maxN+1}];
int dfs_sz(int u, int p) {
    int& res = $1[u] = 1;
    for (auto& v : g[u]) {
        if (v == p) continue;
        res += dfs_sz(v, u);
    }
    return res;
}

int centroid(int u, int p${3:, int n}) {
    for (auto& v : g[u]) {
        if (v == p) continue;
        if ($1[v]*2 > n)
            return centroid(v, u${3:$(nvp-c-yas-vars ", ")});
    }
    return u;
}
