# -*- mode: snippet -*-
# name: mode-config
# key: mode-config
# expand-env: ((modename (bound-and-true-p modename)))
# --
;; Last modified: <>
(nvp-install-on-demand$1)
(eval-when-compile
  (require 'nvp-macro))

;; -------------------------------------------------------------------
;;; Settings

;; -------------------------------------------------------------------
;;; Bindings

(nvp-bindings "${2:`modename`}-mode" ${3:nil}
  ($4))

;; -------------------------------------------------------------------
;;; Hooks

;;;###autoload
(defun nvp-$2-hook ()
  (nvp-setup-local "$2"))

(provide 'nvp-$2-config)