# -*- snippet -*-
# name: JSONtoCSV
# key: f_JSONtoCSV
# contributor: 30-seconds
# --
const JSONtoCSV = (arr, columns, delimiter = ',') =>
  [
    columns.join(delimiter),
    ...arr.map(obj =>
      columns.reduce(
        (acc, key) => \`\${acc}\${!acc.length ? '' : delimiter}"\${!obj[key] ? '' : obj[key]}"\`,
        ''
      )
    )
  ].join('\\n');