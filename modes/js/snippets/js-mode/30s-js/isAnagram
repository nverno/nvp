# -*- snippet -*-
# name: isAnagram
# key: f_isAnagram
# contributor: 30-seconds
# --
const isAnagram = (str1, str2) => {
  const normalize = str =>
    str
      .toLowerCase()
      .replace(/[^a-z0-9]/gi, '')
      .split('')
      .sort()
      .join('');
  return normalize(str1) === normalize(str2);
};