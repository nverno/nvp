# -*- mode: snippet -*-
# name: uncurry
# key: f_uncurry
# contributor: 30-seconds
# --
const uncurry = (fn, n = 1) => (...args) => {
  const next = acc => args => args.reduce((x, y) => x(y), acc);
  if (n > args.length) throw new RangeError('Arguments too few!');
  return next(fn)(args.slice(0, n));
};