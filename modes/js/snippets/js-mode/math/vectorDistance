# -*- mode: snippet -*-
# name: vectorDistance
# key: f_vectorDistance
# contributor: 30-seconds
# --
const vectorDistance = (...coords) => {
  let pointLength = Math.trunc(coords.length / 2);
  let sum = coords
    .slice(0, pointLength)
    .reduce((acc, val, i) => acc + Math.pow(val - coords[pointLength + i], 2), 0);
  return Math.sqrt(sum);
};