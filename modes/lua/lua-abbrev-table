(define-abbrev-table 'lua-mode-abbrev-table
  '(("r" "require" nil :system t)
    ("ret" "return" nil :system t)
    ("!=" "~=" nil :system t))
  "Lua-Mode Abbrevs."
  :parents (list prog-mode-abbrev-table)
  :regexp "\\(\\_<[!_:\\.A-Za-z0-9=]+\\)\\W*"
  :enable-function #'nvp-abbrev-expand-p)
