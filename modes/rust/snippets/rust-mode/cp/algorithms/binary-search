# -*- mode: snippet -*-
# name: binary search
# key: bs
# --
let check = |m: i32| -> bool {
    $0
};

let (mut l, mut r, mut res) = (${1:1i32}, ${2:1e9 as i32}, -1);
while l <= r {
    let mid = (l + r) / 2;
    if check(mid) {
        res = mid;
        r = mid - 1;
    } else {
        l = mid + 1;
    }
}
