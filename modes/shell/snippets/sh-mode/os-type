# -*- mode: snippet -*-
# name: OS Type
# key: ostype
# --
if [[ "$OSTYPE" == "msys" ]]; then
    ${1:# ...}
elif [[ "$OSTYPE" == "cygwin" ]]; then
    ${2:# ...}
elif [[ "$OSTYPE" == "freebsd" ]]; then
    ${3:# ...}
elif [[ "$OSTYPE" == "linux-gnu" ]]; then
    ${4:# ...}
elif [[ "$OSTYPE" == "win32" ]]; then
    ${5:# ...}
elif [[ "$OSTYPE" == "darwin"* ]]; then
    ${6:# ...}
else
    echo Unknown system type.
fi