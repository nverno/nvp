# -*- mode: snippet -*-
# name: parse script arguments
# key: pargs
# expand-env: ((yas-indent-line 'fixed))
# --
while (( "\$#" )); do
    case "\$1" in
        $1) $2;;$0
        *) ${3:echo -e "\e[40m\e[1;32mUsage: \$0 [$1]\e[0m";}${3:$(if (yas-text) "usage && " "\n")}exit 1;;
    esac
    shift || true
done