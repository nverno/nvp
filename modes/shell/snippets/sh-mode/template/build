# -*- mode: snippet -*-
# name: build
# key: build
# --
# shellcheck source=/dev/null

set -eo pipefail

_${1:$(upcase yas-text)}_DIR="\$( cd "\$( dirname "\${BASH_SOURCE[0]}" )" && pwd)"
. "\$_${1:$(upcase yas-text)}_DIR/../vars.sh"

$0
${1:`(replace-regexp-in-string "-" "_" (nvp-yas-bfn-no-ext))`}_install() {
    _info "==> running $1 \$*"
    case "\$1" in
        --install)
        ;;
        --update)
        ;;
        --uninstall)
        ;;
        --version)
            _info "${1:$(capitalize yas-text)} versions:"
            _info "current: $(${1:$(downcase yas-text)} --version 2>/dev/null || echo "not installed")"
            _info "latest: "
        ;;
    esac
    _success "$1 \$1"
}

_process_args $1_install "\$@"