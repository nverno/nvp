# -*- mode: snippet -*-
# name: build
# key: build
# --
# shellcheck source=/dev/null

set -eo pipefail

. ../vars.sh
. "$INCDIR/build-utils.sh"
  
case "\$1" in
    "--install") shift && ${1:`(nvp-yas-bfn-no-ext)`}_install "\${@}";;
    "--uninstall") shift && $1_uninstall "\${@}";;
    "--update") shift && $1_update "\${@}";;
    *) [[ -n "$1" ]] && _error "unrecognized argument: $1"
       $1_install --install;;
esac