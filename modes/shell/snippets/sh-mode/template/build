# -*- mode: snippet -*-
# name: build
# key: build
# --
#!/usr/bin/env bash

set -e

# shellcheck source=/dev/null
. ../vars.sh
# shellcheck source=/dev/null
. "$INCDIR/build-utils.sh"
  
case "\$1" in
    "--install") shift && $1_install "\${@}";;
    "--uninstall") shift && $1_uninstall "\${@}";;
    "--update") shift && $1_update "\${@}";;
    *) $1_install "\${@}";;
esac